<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--tree view of appointment form-->
  <record id="Appointment_tree" model="ir.ui.view">
      <field name="name">hospital.appointment.tree</field>
      <field name="model">hospital.appointment</field>
      <field name="arch" type="xml">
        <tree string="Appointments">
          <field name="name"></field>
          <field name="patient_id"/>
          <field name="patient_age"/>
          <field name="appointment_date"/>
        </tree>
      </field>
   </record>
  <!--form view of appointment view-->
    <record id="Appointment_form" model="ir.ui.view">
      <field name="name">hospital.appointment.form</field>
      <field name="model">hospital.appointment</field>
      <field name="arch" type="xml">
        <form string="Appointments">
        <header>
          <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
        </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="order_seq" readonly="1"/>
              </h1>
            </div>
            <group>
              <field name="patient_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
              <field name="patient_age"/> 
            </group>
            <group>
              <field name="appointment_date"></field>
            </group>
            <notebook>
              <page name="name" string="Doctor Prescription">
                <field name="doctor_note"/>
              </page>
              <page name="name" string="Pharmacy">
                <field name="pharmacy_note"/>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread" options="{&apos;post_refresh&apos;: &apos;recipients&apos;}"/>
          </div>
        </form>
      </field>
    </record>
  <!--action of the appointmentt menu-->
      <record id="action_appointment" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field> />
            <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                            Create First Appointment!
                          </p>
            </field>
        </record>
      <menuitem id="hospital_appointment" name="Appointments" sequence="2" />
      <menuitem id="hospital_appointment" name="Appointments" parent="hospital_root" action="action_appointment"/>
</odoo>